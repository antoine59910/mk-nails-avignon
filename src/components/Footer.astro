---
import siteData from "../data/site.json";
const { business, contact, social } = siteData;
const currentYear = new Date().getFullYear();
---

<footer class="bg-neutral-900 text-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-20">
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-12">
      <!-- Business info -->
      <div>
        <img src="/images/logo.png" alt={business.name} class="h-14 w-auto rounded-full bg-white/10 p-1" />
        <p class="text-white/60 text-sm mt-5 leading-relaxed">
          Salon de manucure et prothesie ongulaire a Avignon. Prothesiste passionnee et perfectionniste.
        </p>
        <!-- Rating badge -->
        <div class="flex items-center gap-2 mt-5 bg-white/5 rounded-lg px-3 py-2 inline-flex border border-white/10">
          <div class="flex gap-0.5">
            {[1,2,3,4,5].map(() => (
              <svg class="w-3 h-3 text-secondary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="text-xs text-white/70 font-medium">{business.rating}/5 ({business.reviewCount} avis)</span>
        </div>

        <!-- Social -->
        {social.instagram && (
          <div class="mt-5">
            <a
              href={social.instagram}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-white/50 hover:text-white transition-colors text-sm"
              aria-label="Instagram"
            >
              <div class="w-9 h-9 bg-white/8 hover:bg-white/15 rounded-lg flex items-center justify-center transition-colors">
                <svg class="w-4.5 h-4.5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
              </div>
              <span>@mk_nails84</span>
            </a>
          </div>
        )}
      </div>

      <!-- Quick links -->
      <div>
        <h4 class="text-xs font-medium uppercase tracking-[0.2em] text-white/40 mb-6">Navigation</h4>
        <ul class="space-y-3">
          <li><a href="#services" class="text-sm text-white/60 hover:text-white transition-colors">Services</a></li>
          <li><a href="#galerie" class="text-sm text-white/60 hover:text-white transition-colors">Galerie</a></li>
          <li><a href="#avis" class="text-sm text-white/60 hover:text-white transition-colors">Avis</a></li>
          <li><a href="#tarifs" class="text-sm text-white/60 hover:text-white transition-colors">Tarifs</a></li>
          <li><a href="#contact" class="text-sm text-white/60 hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="text-xs font-medium uppercase tracking-[0.2em] text-white/40 mb-6">Contact</h4>
        <ul class="space-y-4">
          <li>
            <a href={`tel:${contact.phone}`} class="flex items-center gap-3 text-sm text-white/60 hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              {contact.phoneDisplay}
            </a>
          </li>
          <li class="text-sm text-white/60">
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
              <span>{contact.address.full}</span>
            </div>
          </li>
          <li class="text-sm text-white/60">
            <div class="flex items-start gap-3">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4 mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>{contact.hours}</span>
            </div>
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Bottom bar -->
  <div class="border-t border-white/5">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-5">
      <div class="flex flex-col sm:flex-row items-center justify-between gap-3 text-xs text-white/40">
        <span>&copy; {currentYear} {business.name}</span>
        <span>Avignon, France</span>
      </div>
    </div>
  </div>
</footer>
