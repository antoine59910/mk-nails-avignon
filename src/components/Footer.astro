---
import siteData from "../data/site.json";
const { business, contact } = siteData;
const currentYear = new Date().getFullYear();
---

<footer class="bg-gradient-to-br from-primary-dark to-primary text-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-10">
      <!-- Business info -->
      <div>
        <span class="text-xl font-display font-bold text-white">{business.name}</span>
        <p class="text-white/80 text-sm mt-2 mb-4">{business.tagline}</p>
        <p class="text-white/70 text-sm leading-relaxed">
          Salon de manucure et proth√©sie ongulaire √† Avignon. Proth√©siste passionn√©e et perfectionniste.
        </p>
        <!-- Rating badge -->
        <div class="flex items-center gap-2 mt-4 bg-white/10 rounded-lg px-3 py-2 inline-flex">
          <div class="flex gap-0.5">
            {[1,2,3,4,5].map(() => (
              <svg class="w-3 h-3 text-secondary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <span class="text-xs text-white/90 font-medium">{business.rating}/5 ({business.reviewCount} avis)</span>
        </div>
      </div>

      <!-- Quick links -->
      <div>
        <h4 class="font-semibold text-white mb-4">Navigation</h4>
        <ul class="space-y-2.5">
          <li><a href="#services" class="text-sm text-white/70 hover:text-white transition-colors">Services</a></li>
          <li><a href="#avis" class="text-sm text-white/70 hover:text-white transition-colors">Avis</a></li>
          <li><a href="#tarifs" class="text-sm text-white/70 hover:text-white transition-colors">Tarifs</a></li>
          <li><a href="#galerie" class="text-sm text-white/70 hover:text-white transition-colors">Galerie</a></li>
          <li><a href="#contact" class="text-sm text-white/70 hover:text-white transition-colors">Contact</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold text-white mb-4">Contact</h4>
        <ul class="space-y-3">
          <li>
            <a href={`tel:${contact.phone}`} class="flex items-center gap-2 text-sm text-white/70 hover:text-white transition-colors">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
