---
import siteData from "../data/site.json";
const { services, policyNote } = siteData;
---

<section id="tarifs" class="py-16 md:py-24 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-12 md:mb-16" data-reveal>
      <span class="text-primary font-semibold text-sm uppercase tracking-wider">Nos tarifs</span>
      <h2 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mt-2">
        Nos Prestations & Tarifs
      </h2>
      <p class="text-neutral-700 mt-4 max-w-2xl mx-auto text-lg">
        Des formules pour tous les besoins, de la manucure simple au nail art crÃ©atif
      </p>
    </div>

    <!-- Grille tarifaire -->
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8" data-reveal-stagger>
      {services.map((category) => (
        <div class={`card-lift bg-white rounded-2xl p-6 lg:p-8 shadow-sm border-l-4 ${category.featured ? 'border-secondary ring-2 ring-secondary/20' : 'border-primary'}`}>
          {category.featured && (
            <div class="inline-flex items-center gap-2 bg-secondary/10 text-secondary text-xs font-semibold px-3 py-1 rounded-full mb-4">
              ðŸŒ¸ Meilleure offre
            </div>
          )}

          <!-- Header de catÃ©gorie -->
          <div class="flex items-center gap-3 mb-5 pb-4 border-b border-neutral-200">
            <span class="text-3xl">{category.icon}</span>
            <h3 class="text-xl font-display font-bold text-neutral-900">
              {category.category}
            </h3>
          </div>

          <!-- Items de la catÃ©gorie -->
          <div class="space-y-4">
            {category.items.map((item) => (
              <div class="group">
                <div class="flex items-baseline justify-between gap-3 mb-1">
                  <h4 class="text-base font-semibold text-neutral-900 group-hover:text-primary transition-colors">
                    {item.name}
                  </h4>
                  <div class="flex-shrink-0">
                    <span class="text-lg font-bold text-secondary">
                      {item.price}
                    </span>
                    {item.badge && (
                      <span class="ml-2 text-xs font-semibold text-secondary">
                        {item.badge}
                      </span>
                    )}
                  </div>
                </div>
                {item.description && (
                  <p class="text-sm text-neutral-600 leading-relaxed">
                    {item.description}
                  </p>
                )}
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Note politique -->
    {policyNote && (
      <div class="mt-8 p-6 bg-neutral-50 border-l-4 border-accent rounded-xl" data-reveal>
        <p class="text-sm text-neutral-700 flex items-start gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-accent shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>{policyNote}</span>
        </p>
      </div>
    )}
  </div>
</section>
