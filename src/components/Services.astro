---
import siteData from "../data/site.json";
const { services, policyNote } = siteData;

const categoryIcons: Record<string, string> = {
  "Prestations Mains": `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09z" /></svg>`,
  "Options & Finitions": `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" /></svg>`,
  "Prestations Pieds": `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M21 8.25c0-2.485-2.099-4.5-4.688-4.5-1.935 0-3.597 1.126-4.312 2.733-.715-1.607-2.377-2.733-4.313-2.733C5.1 3.75 3 5.765 3 8.25c0 7.22 9 12 9 12s9-4.78 9-12z" /></svg>`,
  "Formule Complete": `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 011.04 0l2.125 5.111a.563.563 0 00.475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 00-.182.557l1.285 5.385a.562.562 0 01-.84.61l-4.725-2.885a.563.563 0 00-.586 0L6.982 20.54a.562.562 0 01-.84-.61l1.285-5.386a.562.562 0 00-.182-.557l-4.204-3.602a.563.563 0 01.321-.988l5.518-.442a.563.563 0 00.475-.345L11.48 3.5z" /></svg>`,
  "Depose": `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0l3.181 3.183a8.25 8.25 0 0013.803-3.7M4.031 9.865a8.25 8.25 0 0113.803-3.7l3.181 3.182" /></svg>`,
};
---

<section id="tarifs" class="py-20 md:py-28 bg-neutral-50">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16" data-reveal>
      <span class="text-primary font-medium text-xs uppercase tracking-[0.2em]">Nos tarifs</span>
      <h2 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mt-3">
        Prestations & Tarifs
      </h2>
      <p class="text-neutral-700 mt-4 max-w-xl mx-auto">
        Des formules pour tous les besoins, de la manucure simple au nail art creatif
      </p>
      <div class="section-divider mt-6">
        <div class="section-divider-diamond"></div>
      </div>
    </div>

    <!-- Menu spa -->
    <div class="space-y-12" data-reveal-stagger>
      {services.map((category) => (
        <div class={`${category.featured ? 'bg-white rounded-2xl p-8 border border-secondary/30 shadow-sm' : ''}`}>
          {category.featured && (
            <div class="inline-flex items-center gap-1.5 text-secondary text-xs font-medium tracking-wider uppercase mb-4">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
              Meilleure offre
            </div>
          )}

          <!-- Category header -->
          <div class="flex items-center gap-3 mb-6">
            <div class="text-primary">
              <Fragment set:html={categoryIcons[category.category] || categoryIcons["Prestations Mains"]} />
            </div>
            <h3 class="text-xl font-display font-bold text-neutral-900 tracking-wide">
              {category.category}
            </h3>
          </div>

          <!-- Items as spa menu -->
          <div class="space-y-4">
            {category.items.map((item) => (
              <div class="group">
                <div class="flex items-baseline">
                  <h4 class="text-base font-medium text-neutral-900 group-hover:text-primary transition-colors whitespace-nowrap">
                    {item.name}
                  </h4>
                  <div class="menu-dots"></div>
                  <span class="text-base font-display font-bold text-primary whitespace-nowrap">
                    {item.price}
                  </span>
                </div>
                {item.description && (
                  <p class="text-sm text-neutral-600 mt-1 pl-0">
                    {item.description}
                  </p>
                )}
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>

    <!-- Note politique -->
    {policyNote && (
      <div class="mt-12 p-5 bg-white border border-neutral-200 rounded-xl" data-reveal>
        <p class="text-sm text-neutral-700 flex items-start gap-3">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M11.25 11.25l.041-.02a.75.75 0 011.063.852l-.708 2.836a.75.75 0 001.063.853l.041-.021M21 12a9 9 0 11-18 0 9 9 0 0118 0zm-9-3.75h.008v.008H12V8.25z" />
          </svg>
          <span>{policyNote}</span>
        </p>
      </div>
    )}
  </div>
</section>
