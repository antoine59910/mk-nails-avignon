---
import siteData from "../data/site.json";
const { business, contact } = siteData;

const navLinks = [
  { label: "Services", href: "#services" },
  { label: "Avis", href: "#avis" },
  { label: "Tarifs", href: "#tarifs" },
  { label: "Contact", href: "#contact" },
];
---

<header class="sticky top-0 z-50 bg-white/95 backdrop-blur-sm shadow-sm">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo / Name -->
      <a href="#" class="flex flex-col">
        <span class="text-xl font-bold text-primary">{business.name}</span>
        <span class="text-xs text-neutral-700 hidden sm:block">{business.tagline}</span>
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex items-center gap-8">
        {navLinks.map(link => (
          <a href={link.href} class="text-sm font-medium text-neutral-700 hover:text-primary transition-colors">
            {link.label}
          </a>
        ))}
        <a
          href={`tel:${contact.phone}`}
          class="inline-flex items-center gap-2 px-5 py-2.5 bg-secondary text-white text-sm font-semibold rounded-lg hover:bg-secondary-dark transition-colors"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Prendre RDV
        </a>
      </div>

      <!-- Mobile Menu Toggle -->
      <label for="mobile-menu" class="md:hidden cursor-pointer p-2" aria-label="Menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6 text-neutral-800" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </label>
    </div>

    <!-- Mobile Menu (CSS-only) -->
    <input type="checkbox" id="mobile-menu" class="peer hidden" />
    <div class="hidden peer-checked:block md:hidden pb-4 border-t border-neutral-200">
      <div class="flex flex-col gap-3 pt-4">
        {navLinks.map(link => (
          <a href={link.href} class="text-sm font-medium text-neutral-700 hover:text-primary px-2 py-1" onclick="document.getElementById('mobile-menu').checked = false">
            {link.label}
          </a>
        ))}
        <a
          href={`tel:${contact.phone}`}
          class="inline-flex items-center justify-center gap-2 px-5 py-2.5 bg-secondary text-white text-sm font-semibold rounded-lg mt-2"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
          </svg>
          Prendre RDV
        </a>
      </div>
    </div>
  </nav>
</header>
