---
import siteData from "../data/site.json";
const { contact, business, cta } = siteData;

const hasTallyBooking = cta.booking.type === 'tally' && cta.booking.embedUrl;
---

<section id="contact" class="py-20 md:py-28 bg-neutral-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-16" data-reveal>
      <span class="text-primary font-medium text-xs uppercase tracking-[0.2em]">Contact</span>
      <h2 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mt-3">
        Prenez rendez-vous
      </h2>
      <p class="text-neutral-700 mt-4 max-w-xl mx-auto">
        {hasTallyBooking
          ? "Remplissez le formulaire ou contactez-nous par telephone"
          : "Contactez-nous par telephone ou venez nous rendre visite au salon"
        }
      </p>
      <div class="section-divider mt-6">
        <div class="section-divider-diamond"></div>
      </div>
    </div>

    <div class="grid md:grid-cols-2 gap-12 lg:gap-16">
      <!-- Contact info -->
      <div data-reveal="left">
        <h3 class="text-lg font-display font-bold text-neutral-900 mb-8">Nos coordonnees</h3>

        <div class="space-y-6">
          <!-- Phone -->
          <div class="flex items-start gap-4">
            <div class="w-11 h-11 bg-primary/8 rounded-xl flex items-center justify-center shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
            </div>
            <div>
              <span class="font-medium text-neutral-900 block text-sm">Telephone</span>
              <a href={`tel:${contact.phone}`} class="text-primary hover:text-primary-dark transition-colors font-medium">
                {contact.phoneDisplay}
              </a>
            </div>
          </div>

          <!-- Address -->
          <div class="flex items-start gap-4">
            <div class="w-11 h-11 bg-secondary/8 rounded-xl flex items-center justify-center shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
              </svg>
            </div>
            <div>
              <span class="font-medium text-neutral-900 block text-sm">Adresse</span>
              <a href={contact.googleMapsLink} target="_blank" rel="noopener noreferrer" class="text-neutral-700 hover:text-primary transition-colors text-sm">
                {contact.address.full}
              </a>
            </div>
          </div>

          <!-- Hours -->
          <div class="flex items-start gap-4">
            <div class="w-11 h-11 bg-accent/8 rounded-xl flex items-center justify-center shrink-0">
              <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
            </div>
            <div>
              <span class="font-medium text-neutral-900 block text-sm">Horaires</span>
              <p class="text-neutral-700 text-sm">{contact.hours}</p>
            </div>
          </div>

          <!-- Parking -->
          {contact.parkingInfo && (
            <div class="flex items-start gap-4">
              <div class="w-11 h-11 bg-neutral-100 rounded-xl flex items-center justify-center shrink-0">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-neutral-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 18.75a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h6m-9 0H3.375a1.125 1.125 0 01-1.125-1.125V14.25m17.25 4.5a1.5 1.5 0 01-3 0m3 0a1.5 1.5 0 00-3 0m3 0h1.125c.621 0 1.129-.504 1.09-1.124a17.902 17.902 0 00-3.213-9.193 2.056 2.056 0 00-1.58-.86H14.25M16.5 18.75h-2.25m0-11.177v-.958c0-.568-.422-1.048-.987-1.106a48.554 48.554 0 00-10.026 0 1.106 1.106 0 00-.987 1.106v7.635m12-6.677v6.677m0 4.5v-4.5m0 0h-12" />
                </svg>
              </div>
              <div>
                <span class="font-medium text-neutral-900 block text-sm">Parking</span>
                <p class="text-neutral-700 text-sm">{contact.parkingInfo}</p>
              </div>
            </div>
          )}
        </div>

        <!-- CTA Button -->
        <div class="mt-10">
          <a
            href={`tel:${contact.phone}`}
            class="inline-flex items-center justify-center gap-2.5 w-full px-8 py-4 bg-primary text-white font-medium rounded-full hover:bg-primary-dark transition-all duration-300 shadow-lg shadow-primary/15"
          >
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Appeler maintenant
          </a>
        </div>
      </div>

      <!-- Right column: Tally form or Map -->
      <div data-reveal="right">
        {hasTallyBooking ? (
          <div>
            <h3 class="text-lg font-display font-bold text-neutral-900 mb-6">Demande en ligne</h3>
            <div class="bg-white rounded-2xl p-1 border border-neutral-200 shadow-sm overflow-hidden" style="min-height: 500px;">
              <iframe
                data-tally-src={cta.booking.embedUrl}
                width="100%"
                height="500"
                frameborder="0"
                marginheight="0"
                marginwidth="0"
                title="Formulaire de reservation"
                class="rounded-xl"
              ></iframe>
            </div>
            <p class="text-xs text-neutral-500 text-center mt-3">
              Nous vous recontacterons sous 24h pour confirmer votre rendez-vous
            </p>
          </div>
        ) : (
          <div>
            <div class="aspect-[4/3] rounded-2xl overflow-hidden border border-neutral-200 shadow-sm">
              <iframe
                src={contact.googleMapsEmbed}
                width="100%"
                height="100%"
                style="border:0;"
                allowfullscreen=""
                loading="lazy"
                referrerpolicy="no-referrer-when-downgrade"
                title="Localisation MK Nails Avignon"
              ></iframe>
            </div>
            <p class="text-sm text-neutral-500 text-center mt-4">
              {contact.address.street}, {contact.address.zipCode} {contact.address.city}
            </p>
          </div>
        )}
      </div>
    </div>
  </div>
</section>

{hasTallyBooking && (
  <script is:inline>
    var d=document,w="https://tally.so/widgets/embed.js",
    v=function(){"undefined"!=typeof Tally?Tally.loadEmbeds():d.querySelectorAll("iframe[data-tally-src]:not([src])").forEach((function(e){e.src=e.dataset.tallySrc}))};
    if("undefined"!=typeof Tally)v();else if(d.querySelector('script[src="'+w+'"]')==null){var s=d.createElement("script");s.src=w,s.onload=v,s.onerror=v,d.body.appendChild(s);}
  </script>
)}
