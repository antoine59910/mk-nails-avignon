---
import siteData from "../data/site.json";
const { whyChooseUs } = siteData;

const icons = [
  // Palette / brush icon for "Nail art sur-mesure"
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.53 16.122a3 3 0 00-5.78 1.128 2.25 2.25 0 01-2.4 2.245 4.5 4.5 0 008.4-2.245c0-.399-.078-.78-.22-1.128zm0 0a15.998 15.998 0 003.388-1.62m-5.043-.025a15.994 15.994 0 011.622-3.395m3.42 3.42a15.995 15.995 0 004.764-4.648l3.876-5.814a1.151 1.151 0 00-1.597-1.597L14.146 6.32a15.996 15.996 0 00-4.649 4.763m3.42 3.42a6.776 6.776 0 00-3.42-3.42" /></svg>`,
  // Clock icon for "Tenue 4 semaines"
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>`,
  // Sparkles icon for "Perfectionniste"
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.455 2.456L21.75 6l-1.036.259a3.375 3.375 0 00-2.455 2.456z" /></svg>`,
  // Calendar icon for "Ouvert 7j/7"
  `<svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5"><path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5" /></svg>`,
];
---

<section id="pourquoi" class="py-20 md:py-28 bg-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-16" data-reveal>
      <span class="text-primary font-medium text-xs uppercase tracking-[0.2em]">Pourquoi nous choisir</span>
      <h2 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mt-3 mb-5">
        L'excellence au bout des doigts
      </h2>
      <div class="section-divider mt-6">
        <div class="section-divider-diamond"></div>
      </div>
    </div>

    <!-- Grid -->
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8" data-reveal-stagger>
      {whyChooseUs.map((pillar, i) => (
        <div class="card-hover bg-white rounded-2xl p-8 lg:p-10 border border-neutral-200 hover:bg-neutral-50">
          <div class="flex items-start gap-5">
            <div class="w-12 h-12 bg-primary/8 rounded-xl flex items-center justify-center shrink-0 text-primary">
              <Fragment set:html={icons[i]} />
            </div>
            <div>
              <h3 class="text-lg font-display font-bold text-neutral-900 mb-2">
                {pillar.title}
              </h3>
              <p class="text-neutral-700 leading-relaxed text-sm">
                {pillar.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
