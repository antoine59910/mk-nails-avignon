---
import siteData from "../data/site.json";
const { whyChooseUs } = siteData;
---

<section id="pourquoi" class="py-16 md:py-24 bg-gradient-to-br from-neutral-50 to-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Header -->
    <div class="text-center mb-12" data-reveal>
      <span class="text-primary font-semibold text-sm uppercase tracking-wider">Pourquoi nous choisir</span>
      <h2 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mt-2 mb-4">
        Pourquoi choisir MK Nails ?
      </h2>
      <p class="text-lg text-neutral-700 max-w-2xl mx-auto">
        Découvrez ce qui fait la différence chez MK Nails Avignon
      </p>
    </div>

    <!-- Grid des 4 piliers -->
    <div class="grid md:grid-cols-2 gap-6 lg:gap-8" data-reveal-stagger>
      {whyChooseUs.map((pillar) => (
        <div class="card-lift bg-white rounded-2xl p-8 border-l-4 border-secondary shadow-sm hover:shadow-xl transition-all duration-300">
          <!-- Icône -->
          <div class="flex items-center gap-4 mb-4">
            <div class="text-5xl">{pillar.icon}</div>
            <h3 class="text-xl font-display font-bold text-neutral-900">
              {pillar.title}
            </h3>
          </div>
          <!-- Description -->
          <p class="text-neutral-700 leading-relaxed">
            {pillar.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
