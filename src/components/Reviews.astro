---
import siteData from "../data/site.json";
const { reviews, business, social } = siteData;
---

<section id="avis" class="py-16 md:py-24 bg-neutral-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section header -->
    <div class="text-center mb-12 md:mb-16" data-reveal>
      <span class="text-primary font-semibold text-sm uppercase tracking-wider">Avis clients</span>
      <h2 class="text-3xl md:text-4xl font-display font-bold text-neutral-900 mt-2">
        Ce que disent nos clientes
      </h2>

      <!-- Overall rating -->
      <div class="flex items-center justify-center gap-4 mt-6">
        <div class="flex items-center gap-2">
          <span class="text-4xl font-bold text-neutral-900">{business.rating}</span>
          <div class="flex flex-col items-start">
            <div class="flex gap-0.5">
              {[1,2,3,4,5].map(() => (
                <svg class="w-5 h-5 text-primary" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <span class="text-sm text-neutral-700">{business.reviewCount} avis Google</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Reviews grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6" data-reveal-stagger>
      {reviews.map(review => (
        <div class="card-lift bg-white rounded-2xl p-6 shadow-sm border border-neutral-200 flex flex-col">
          <!-- Header -->
          <div class="flex items-center justify-between mb-4">
            <div class="flex items-center gap-3">
              <div class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center">
                <span class="text-primary font-semibold text-sm">{review.author.charAt(0)}</span>
              </div>
              <div>
                <span class="font-semibold text-neutral-900 text-sm block">{review.author}</span>
                <span class="text-xs text-neutral-700">{review.date}</span>
              </div>
            </div>
            <!-- Google icon -->
            <svg class="w-5 h-5 text-neutral-700/40" viewBox="0 0 24 24" fill="currentColor">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92a5.06 5.06 0 01-2.2 3.32v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.1z" />
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
            </svg>
          </div>

          <!-- Stars -->
          <div class="flex gap-0.5 mb-3">
            {Array.from({ length: review.rating }).map(() => (
              <svg class="w-4 h-4 text-primary" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Review text -->
          <div class="flex-1">
            <details class="group">
              <summary class="text-sm text-neutral-700 leading-relaxed cursor-pointer list-none">
                <span class="line-clamp-4">{review.text}</span>
                <span class="text-secondary text-xs font-medium mt-1 inline-block group-open:hidden">Lire la suite</span>
              </summary>
              <p class="text-sm text-neutral-700 leading-relaxed mt-2">{review.text}</p>
            </details>
          </div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center mt-10">
      <a
        href={social.googleMaps}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-primary font-semibold hover:text-primary-dark transition-colors"
      >
        Voir tous les avis sur Google
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  </div>
</section>
